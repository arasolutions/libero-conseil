{% extends 'base.html.twig' %}

{% block title %}Postes à pourvoir{% endblock %}

{% block body %}
    <div class="banner video-background-banner pv-40 dark-translucent-bg hovered">

        <div class="video-background-poster"
             style="background-image: url('{{ asset('assets/imgs/stade2-bandeau.jpg') }}');"></div>
        <!-- breadcrumb end -->
        <div class="container">
            <div class="row justify-content-lg-center">
                <div class="col-lg-8 text-center pv-20">
                    <h2 class="title hc-element-invisible" data-animation-effect="fadeIn" data-effect-delay="100">Postes
                        à pourvoir</h2>
                    <div class="separator hc-element-invisible mt-10" data-animation-effect="fadeIn"
                         data-effect-delay="100"></div>
                    <p class="text-center hc-element-invisible" data-animation-effect="fadeIn" data-effect-delay="100">
                        Vous trouverez ci-dessous certains postes sur lesquels nous travaillons actuellement.<br/>
                        Pour des raisons de confidentialité, d'autres ne sont pas visibles, n'hésitez donc pas à nous
                        contacter en direct.
                    </p>
                </div>
            </div>
        </div>

    </div>

    <section class="main-container">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-12">

                    <!-- page-title start -->
                    <!-- ================ -->
                    {% if jobs | length > 0 %}
                        <div class="separator-2"></div>
                        {% for job in jobs.data %}
                            <div class="image-box style-3-b">
                                <div class="row">
                                    <!--<div class="col-md-6">
                                <div class="overlay-container">
                                    <img src="{{ asset('assets/imgs/portfolio.jpg') }}" alt="">
