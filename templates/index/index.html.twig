{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('*[data-default][data-hidden]').hover(function () {
                $(this).find('img')[0].src = $(this).data('hidden');
            }, function () {
                $(this).find('img')[0].src = $(this).data('default');
            });

            $(".phone, .email, .linkedin").on("click", function (e) {
                e.stopPropagation();
            });
        });
    </script>
{% endblock %}